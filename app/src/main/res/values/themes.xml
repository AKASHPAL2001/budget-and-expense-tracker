<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BudgetTracker" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_secondary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
        <item name="colorSurface">@color/app_bg</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/app_bg</item>
        <item name="android:navigationBarColor">@color/app_bg</item>
        <item name="materialCardViewStyle">@style/BudgetCard</item>
    </style>

    <style name="BudgetCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
